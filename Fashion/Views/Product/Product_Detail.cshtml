@model Fashion.Models.Product
@{

}
<section class="shop-details">
    <div class="product__details__pic">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="product__details__breadcrumb">
                        <a href="index-2.html">Home</a>
                        <a href="shop.html">Shop</a>
                        <span>Product Details</span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3 col-md-3">
                    <ul class="nav nav-tabs" role="tablist">
                        @{
                            int counter = 1;
                            foreach (var image in Model.ProductImages)
                            {
                                <li class="nav-item">
                                    <a class="nav-link @(counter == 1 ? "active" : "")" data-toggle="tab" href="#tabs-@counter" role="tab">
                                        <div class="product__thumb__pic" style = " background: url('@Url.Content("~/img/product_img/" + @image.ImageUrl)') top center / cover"></div>
                                    </a>
                                </li>
                                counter++;
                            }
                        }

                    </ul>
                </div>
                <div class="col-lg-6 col-md-9">
                    <div class="tab-content">
                        @{
                            counter = 1;
                            foreach(var image in Model.ProductImages)
                            {
                                <div class="tab-pane @(counter == 1 ? "active" : "")" id="tabs-@counter" role="tabpanel">
                                    <div class="product__details__pic__item">
                                        <img src="@Url.Content("/img/product_img/" +@image.ImageUrl)" style=" width: 600px; height: 600px; object-fit: cover;" alt />
                                    </div>
                                </div>
                                counter++;  
                            }   

                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="product__details__content">
        <div class="container">
            <div class="row d-flex justify-content-center">
                <div class="col-lg-8">
                    <div class="product__details__text">
                        <h4>@Model.ProductName</h4>
                        <h3>$@Model.Price <span>70.00</span></h3>
                        <p>
                            Coat with quilted lining and an adjustable hood. Featuring
                            long sleeves with adjustable cuff tabs, adjustable asymmetric
                            hem with elastic side tabs and a front zip fastening with
                            placket.
                        </p>
                        <form id="addToCart-@Model.ProductID" method="post" action="@Url.Action("AddToCart", "Product")">
                            <div class="product__details__option">
                                <div class="product__details__option__size">
                                    <span>Size:</span>
                                    @foreach (var productSize in Model.ProductSizes)
                                    {
                                        <label for="@($"size-{productSize.Size.SizeID}")">
                                            @productSize.Size.Name
                                            <input type="radio" id="@($"size-{productSize.Size.SizeID}")" name="sizeId" value="@productSize.Size.SizeID" />
                                        </label>
                                    }
                                </div>
                            </div>
                            <div class="product__details__cart__option mb-5">
                                <div class="quantity">
                                    <div class="pro-qty">
                                        <input type="text"  name="quantity" value="1" />
                                    </div>
                                </div>
                                <input type="hidden" name="productId" value="@Model.ProductID" />
                                <a href="#" class="primary-btn" onclick="document.getElementById('addToCart-@Model.ProductID').submit()">+ Add To Cart</a>
                            </div>
                        </form>
                        <div class="product__details__btns__option">
                            <a href="#"><i class="fa fa-heart"></i> add to wishlist</a>
                        </div>
                        <div class="product__details__last__option">
                            <h5><span>Guaranteed Safe Checkout</span></h5>
                            <img src="img/shop-details/details-payment.png" alt />
                            <ul>
                                <li><span>SKU:</span> 3812912</li>
                                <li><span>Categories:</span> @Model.Category.CategoryName</li>
                                <li><span>Tag:</span> Clothes, Skin, Body</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
